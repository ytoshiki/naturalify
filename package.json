{
  "type": "module",
  "scripts": {
    "dev": "cross-env TS_NODE_TRANSPILE_ONLY=1 node --no-warnings --loader ts-node/esm src/index.ts",
    "dev:history": "npm run dev -- --history",
    "dev:drop-history": "npm run dev -- --drop-history",
    "dev:watch": "nodemon --exec npm run dev",
    "build": "npx tsc",
    "start": "node dist/index.js",
    "prepare": "husky install",
    "test": "vitest"
  },
  "dependencies": {
    "axios": "^1.8.3",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "clipboardy": "^4.0.0",
    "dotenv": "^16.4.7",
    "enquirer": "^2.4.1",
    "figlet": "^1.8.0",
    "inquirer": "^12.5.0",
    "ora": "^8.2.0",
    "readline-sync": "^1.4.10",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/figlet": "^1.7.0",
    "@types/node": "^22.13.10",
    "@types/readline-sync": "^1.4.8",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^8.0.0",
    "lint-staged": "^15.5.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.1",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
